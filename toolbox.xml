<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category name="RELAY 4CHS" colour="#18820c" icon="toggle-on">
    <block type="relay_toggle_control">
      <value name="relay">
        <shadow type="math_number">
          <field name="NUM">3</field>
        </shadow>
      </value>
      <value name="state">
        <shadow type="math_number">
          <field name="NUM">0</field> <!-- TẮT -->
        </shadow>
      </value>
    </block>
    <block type="relay_get_state">
      <field name="relay">1</field>
    </block>
    <block type="change_relay_address">
      <value name="old_address">
        <block type="math_number">
          <field name="NUM">0</field>
        </block>
      </value>
      <value name="new_address">
        <block type="math_number">
          <field name="NUM">1</field>
        </block>
      </value>
    </block>
    <block type="control_relay_at_address">
    <field name="state">1</field>
    <field name="relay">1</field>
    <value name="address">
      <block type="math_number">
        <field name="NUM">0</field>
      </block>
    </value>
    </block>
    <block type="read_relay_status_at_address">
      <field name="relay">1</field>  <!-- Chọn relay 1 -->
      <value name="address">
          <block type="math_number">
              <field name="NUM">0</field>  <!-- Địa chỉ relay -->
          </block>
      </value>
    </block>
  </category>
</xml>
